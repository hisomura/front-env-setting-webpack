{
  "env": {
    "browser": true,
    "es2017": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "jQuery": "readonly",
    "$": "readonly",
    "g" : "writable"
  },
  "rules": {
    "no-undef": "off",
    "semi": ["error", "never"]
  }
}